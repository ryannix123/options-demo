<!DOCTYPE html>
<html>
<head>
    <title>Market Overview</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 2rem;
        }
        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }
        .logo {
            max-width: 300px;
            height: auto;
        }
        h2 {
            border-bottom: 1px solid #ccc;
            margin-top: 2rem;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 0.5rem;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <div class="logo-container">
        <img src="/logo.jpg" alt="Logo" class="logo">
    </div>

    <h1>Market Data</h1>

    <% for (const [category, items] of Object.entries(marketData)) { %>
        <h2><%= category %></h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Symbol</th>
                    <th>Price</th>
                    <th>Change</th>
                    <th>Change %</th>
                    <th>High</th>
                    <th>Low</th>
                    <th>Volume</th>
                </tr>
            </thead>
            <tbody>
                <% for (const item of items) { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.symbol %></td>
                        <td><%= item.price ?? '-' %></td>
                        <td><%= item.change ?? '-' %></td>
                        <td><%= item.changePercent ?? '-' %></td>
                        <td><%= item.high ?? '-' %></td>
                        <td><%= item.low ?? '-' %></td>
                        <td><%= item.volume ?? '-' %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    <% } %>

</body>
</html>